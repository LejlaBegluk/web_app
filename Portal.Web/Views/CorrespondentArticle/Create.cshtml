@model Portal.Data.ViewModels.CorrespondentArticle.AddCorrespondentArticleViewModel

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" style="float:left;">Add correspondant article</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    @using (Html.BeginForm("Create", "CorrespondentArticle", FormMethod.Post, new { @class = "form-horizontal form-label-left", @enctype = "multipart/form-data" }))
    {
        <div class="modal-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Content, new { @class = "control-label col-md-3 col-sm-2" })
                @Html.TextAreaFor(x => x.Content, new { @class = "form-control", autocomplete = "off", rows = "10" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Photos, new { @class = "control-label col-md-3 col-sm-2" })
                <div class="custom-file col-md-11 col-sm-11">
                    <label id="photo-lbl" class="custom-file-label">No file selected</label>
                    <input asp-for="Photos" type="file" class="custom-file-input" multiple accept=".gif,.jpg,.jpeg,.png" />

                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="submit" id="submit" class="btn btn-primary">Submit</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

        </div>
    }
    </div>
<script>
         $('.custom-file-input').on("change", function () {
                var files = $(this)[0].files;
                if (files.length > 1) {
                    $('#photo-lbl').html(files.length + ' files selected');
                }
                else if (files.length == 1) {
                    $('#photo-lbl').html(files[0].name);

                }
         });


    </script>