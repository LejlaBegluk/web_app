@using Portal.Data.ViewModels.Article
@model ArticleHomeListViewModel
@{
    ViewData["Title"] = "Home Page";
}
@* Page wrapper *@
<div class="page-wrapper">
    <!--Post slider-->
    <div style="margin-top:10px;">

        <div style="height: 15px; width: 15px; background-color: red; display: inline-block; border-radius:10px;"></div>  <a style="color:red;" class="title-style" asp-area="" asp-controller="Home" asp-action="ArticlePage" asp-route-SelectedList="News"> News </a>

    </div>
    <hr />


    <div id="showmodal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">

        </div>
    </div>

    @if (Model.News != null)
    {
        <div class="post-slider">

            <i class="fa fa-chevron-left prev"></i>
            <i class="fa fa-chevron-right next"></i>
            <div class="post-wrapper">
                @for (int i = 0; i < Model.News.Count(); i++)
                {

                    <div class="post">
                        @if (Model.News[i].Photo == null)
                        {

                            <img src="~/Images/news.jpg" class="slider-image">
                            <div class="post-info">
                                <h6><a asp-action="Details" asp-controller="Articles" asp-route-id="@Model.News[i].Id">@Model.News[i].Title</a></h6>
                                <i class="fa fa-heart"> @Model.News[i].Likes </i>
                                <i class="fa fa-calendar"> @Model.News[i].CreateOn.ToShortDateString()</i>

                            </div>
                        }
                        else
                        {
                            <img src="@Model.News[i].Photo.Url" class="slider-image">
                            <div class="post-info">
                                <h6><a asp-action="Details" asp-controller="Articles" asp-route-id="@Model.News[i].Id">@Model.News[i].Title</a></h6>
                                <i class="fa fa-heart"> @Model.News[i].Likes</i>
                                <i class="fa fa-calendar"> @Model.News[i].CreateOn.ToShortDateString()</i>
                            </div>
                        }
                    </div>
                }



            </div>
        </div>
    }

    <!--end post slider-->
    @*<hr />*@
    <!--Post slider-->
    @if (Model.Buisness != null)
    {
