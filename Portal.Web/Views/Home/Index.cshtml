                            <img src="@Model.Buisness[i].Photo.Url" class="slider-image">
                            <div class="post-info">
                                <h6><a asp-action="Details" asp-controller="Articles" asp-route-id="@Model.Buisness[i].Id">@Model.Buisness[i].Title</a></h6>
                                <i class="fa fa-heart"> @Model.Buisness[i].Likes</i>
                                <i class="fa fa-calendar"> @Model.Buisness[i].CreateOn.ToShortDateString()</i>
                            </div>
                        }
                    </div>
                }



            </div>
        </div>
    }
    <!--end post slider-->
    @*<hr />*@
    <!--Post slider-->
    @if (Model.Sport != null)
