                            <img src="@Model.Sport[i].Photo.Url" class="slider-image">
                            <div class="post-info">
                                <h6><a asp-action="Details" asp-controller="Articles" asp-route-id="@Model.Sport[i].Id">@Model.Sport[i].Title</a></h6>
